@model Resta.MVC.Models.MenuResponseVm

@{
    ViewData["Title"] = "Menü";
    var masaDurum = (ViewBag.MasaDurum as string) ?? "bos"; // bos / dolu
}

<div class="container py-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h5 class="mb-0">Menü</h5>
            <small class="text-muted">Masa: @Model.MasaId • Durum: <b>@masaDurum</b></small>
        </div>

        <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#cartCanvas" aria-controls="cartCanvas">
            Sepet <span class="badge bg-light text-dark ms-1" id="cartCount">0</span>
        </button>
    </div>

    @if (Model.Kategoriler == null || Model.Kategoriler.Count == 0)
    {
        <div class="alert alert-warning">
            Bu masa için menü bulunamadı (Bölüm-Kategori eşleşmesi yok veya kategori/ürün yok).
        </div>
    }
    else
    {
        <div class="accordion" id="menuAccordion">
            @foreach (var k in Model.Kategoriler)
            {
                <partial name="_KategoriNode" model="k" />
            }
        </div>
    }
</div>

<!-- Sepet Offcanvas -->
<div class="offcanvas offcanvas-bottom" tabindex="-1" id="cartCanvas" aria-labelledby="cartCanvasLabel" style="height: 70vh;">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="cartCanvasLabel">Sepet</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <div id="cartItems" class="mb-3"></div>

        <div class="d-flex justify-content-between align-items-center border-top pt-3">
            <div>
                <div class="text-muted">Toplam</div>
                <div class="fs-5"><b id="cartTotal">0</b> ₺</div>
            </div>
            <button class="btn btn-success" id="btnSiparisVer">Sipariş Ver</button>
        </div>
    </div>
</div>

<!-- Geri sayım Modal -->
<div class="modal fade" id="countdownModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Sipariş Onayı</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Siparişiniz <b id="countdownNumber">10</b> sn sonra gönderilecek.</p>
                <p class="text-muted mb-0">İptal ederseniz sepetiniz kalır, DB’ye yazılmaz.</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-outline-danger" id="btnIptal">İptal Et</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        window.MASA_ID = @Model.MasaId;
        window.MASA_DURUM = "@masaDurum";
    </script>
    <script src="~/js/menu.js"></script>
}
