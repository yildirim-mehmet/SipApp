                        }, 1500);
                    } else {
                        showError(response.message || 'Ödeme işlemi başarısız');
                    }
                },
                error: function(xhr) {
                    try {
                        const error = JSON.parse(xhr.responseText);
                        showError(error.message || 'Ödeme işlemi başarısız');
                    } catch(e) {
                        showError('Sunucu hatası');
                    }
                }
            });
        }

        function startTimer(sarkiId, duration) {
            const timerElement = $(`#timer-${sarkiId}`);
            const timerText = timerElement.find('.timer-text');

            if (timerElement.length === 0) return;

            timerElement.show();
            let timeLeft = duration;

            const timer = setInterval(function() {
                timeLeft--;

                if (timeLeft <= 0) {
                    clearInterval(timer);
                    timerElement.hide();
                    return;
                }

                const minutes = Math.floor(timeLeft / 60);
                const seconds = timeLeft % 60;
                timerText.text(`Tekrar ekleyebilmeniz için: ${minutes}:${seconds.toString().padStart(2, '0')}`);
            }, 1000);

            beklemeTimerleri[sarkiId] = timer;
        }

        function closePlayer() {
            $('#musicPlayer').hide();
        }

        function showSuccess(message) {
            const alert = `
                <div class="alert alert-success alert-dismissible fade show position-fixed top-0 start-50 translate-middle-x mt-3"
                     style="z-index: 9999; min-width: 300px; max-width: 500px;">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle fa-2x me-3"></i>
                        <div>${message}</div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>`;

            $('body').append(alert);
            setTimeout(() => $('.alert').alert('close'), 5000);
        }

        function showError(message) {
            const alert = `
                <div class="alert alert-danger alert-dismissible fade show position-fixed top-0 start-50 translate-middle-x mt-3"
                     style="z-index: 9999; min-width: 300px; max-width: 500px;">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-circle fa-2x me-3"></i>
                        <div>${message}</div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>`;

            $('body').append(alert);
            setTimeout(() => $('.alert').alert('close'), 5000);
        }

        // Sayfa kapanırken timer'ları temizle
        $(window).on('beforeunload', function() {
            if (queueRefreshInterval) {
                clearInterval(queueRefreshInterval);
            }

            Object.values(beklemeTimerleri).forEach(timer => {
                clearInterval(timer);
            });
        });
