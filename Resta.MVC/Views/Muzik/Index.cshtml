                function ekleSarki(sarkiId, masaId, siraDegeri, odemeRef) {
            const token = $('input[name="__RequestVerificationToken"]').val();

            $.ajax({
                url: '/Muzik/Ekle',
                method: 'POST',
                headers: {
                    'RequestVerificationToken': token
                },
                contentType: 'application/json',
                data: JSON.stringify({
                    SarkiId: sarkiId, // Yorum satırı kaldırıldı, C# tarafındaki ViewModel ile eşleşmeli
                    MasaId: masaId
                }),
                success: function(response) {
                    // response.success büyük-küçük harf duyarlılığına dikkat!
                    // C# tarafı Ok(new { success = true }) dönüyorsa çalışır.
                    if (response.success) {
                        showSuccess(`Şarkı sıraya eklendi!<br>Sıra numarası: ${response.calmaListesiId}`);
                        startTimer(sarkiId, 60);
                        setTimeout(() => {
                            refreshQueue();
                        }, 1500);
                    } else {
                        showError(response.message || response.error); // API'den 'error' dönüyorsa ona bak
                        if (response.kalanSure) {
                            startTimer(sarkiId, response.kalanSure);
                        }
                    }
                },
                error: function(xhr) {
                    try {
                        const error = JSON.parse(xhr.responseText);
                        showError(error.message || error.error || 'İstek gönderilemedi');
                    } catch(e) {
                        showError('Sunucu hatası');
                    }
                }
            });
        }

        function odemeliEkleSarki(sarkiId, masaId, odemeMiktari, odemeRef) {
